# Backend environment example
# Copy to backend/.env and fill in values

# Database
DATABASE_URL=sqlite:///./db.sqlite3

# HTTP
HTTP_TIMEOUT=8

# TMDb (prefer v4 bearer; v3 key optional)
TMDB_BEARER=
TMDB_API_KEY=
TMDB_BASE_URL=https://api.themoviedb.org/3

# CORS
# Comma-separated list; if empty, a sensible default will be used
ALLOWED_ORIGINS=
