# Configuración de Email (OBLIGATORIO para producción)
# Configuración SMTP
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=tu-email@gmail.com
SMTP_PASSWORD=tu-contraseña-de-aplicacion
SMTP_USE_TLS=true

# Configuración del email
EMAIL_FROM=tu-email@gmail.com
EMAIL_FROM_NAME=Mi Catálogo

# URL del frontend (importante para los enlaces de recuperación)
FRONTEND_URL=https://tu-dominio.com

# Modo desarrollo (true = emails se muestran en consola, false = se envían realmente)
EMAIL_DEVELOPMENT_MODE=false

# Otras configuraciones existentes
TMDB_BEARER=tu-token-bearer
TMDB_API_KEY=tu-api-key
ALLOWED_ORIGINS=https://tu-dominio.com,http://localhost:3000
